<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:ChatApp.Views"
             xmlns:prism="http://prismlibrary.com"
             xmlns:mark="clr-namespace:ChatApp.Views.Markup"
             x:Class="ChatApp.Views.ChatRoomsPage">

    <StackLayout BackgroundColor="Black">
        <StackLayout.Resources>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
            </Style>   
        </StackLayout.Resources>

        <StackLayout BackgroundColor="Black">
            <StackLayout>
                <Label Text="{x:Static view:ChatIcons.ChatIcon}" FontFamily="{StaticResource PostFontIcon}"/>
                <Label
               TextColor="White"
               HorizontalOptions="Center"
               Margin="20"
               FontSize="35"
               >
                <Label.Text>
                    <mark:MessageExtention MessageKey="ChatRoom"/>
                </Label.Text>
            </Label>
                
            </StackLayout>
            <Label
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="17">
                <Label.Text>
                    <mark:MessageExtention MessageKey="ChooseChatRoom"/>
                </Label.Text>
            </Label>
        </StackLayout>

        <StackLayout>
            <ListView ItemsSource="{Binding ChatRoomsVm}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding ChatRoom.Description}"/>
                            </StackLayout>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Button Command="{prism:NavigateTo  {x:Static view:Routes.ChatPageRoute}}"></Button>
    </StackLayout>

</ContentPage>
